<h1>Listing restaurents</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurents.each do |restaurent| %>
      <tr>
        <td><%= restaurent.name %></td>
        <td><%= restaurent.address %></td>
        <td><%= restaurent.phone %></td>
        <td><%= restaurent.website %></td>
        <td><%= link_to 'Show', restaurent, class: 'btn btn-link' %></td>
        <td><%= link_to 'Edit', edit_restaurent_path(restaurent.id), class: 'btn btn-link' %></td>
        <td><%= link_to 'Destroy', restaurent, class: 'btn btn-link', method: :delete, data: { confirm: 'هل انت متاكــــــــد؟؟؟' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurent', new_restaurent_path, class: 'btn btn-link' %>
